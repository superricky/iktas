<%- model_class = Admin::Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sign) %>:</strong></dt>
  <dd><%= @admin_photo.sign %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar) %>:</strong></dt>
  
  <dd><%= image_tag @admin_photo.avatar.url(:medium) %></dd>

  
